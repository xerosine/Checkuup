    <script>
      const nav = document.querySelector("nav");
      const showNavBtn = document.querySelector(".nav-show");
      const hideNavBtn = document.querySelector(".nav-hide");

      const showNav = (e) => {
        e.stopPropagation();
        nav.classList.add("w-3/4", "sm:w-1/2");
        hideNavBtn.classList.remove("left-5", "opacity-0", "rotate-180");
        showNavBtn.classList.add("left-53", "sm:left-30", "opacity-0", "z-50");
        hideNavBtn.addEventListener("click", hideNav);
        showNavBtn.removeEventListener("click", showNav);
      };

      const hideNav = () => {
        nav.classList.remove("w-3/4", "sm:w-1/2");
        showNavBtn.classList.remove("left-53", "sm:left-30", "opacity-0");
        hideNavBtn.classList.add("left-5", "opacity-0", "z-55", "rotate-180");
        showNavBtn.addEventListener("click", showNav);
        hideNavBtn.removeEventListener("click", hideNav);
      };
      
      window.onclick = (e) => {
        if (!nav.classList.contains("hidden") && !nav.contains(e.target)) {
          hideNav();
        }
      };

      showNavBtn.addEventListener("click", showNav);

      const form = document.querySelector("form");
      form.addEventListener("submit", async (e) => {
        let status
        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());
        console.log(data);
        for (key in data) {
          if (!data[key]) {
            showMessage(
              `The ${key} field is required!`,
              "border-red-500",
              "bg-red-500"
            );
          }
        }
        await fetch("contact-us", {
          method: "post",
          body: formData,
        })
          .then((res) => {
            status = res.status
            return res.json()
        })
          .then(data => {
            console.log(data);
            if (status === 200) {
            showMessage(data.message, "border-green-500", "bg-green-500")
          } else {
            showMessage(data.message, "border-red-500", "bg-red-500")
          }
          })
          .catch((err) => {
            const message = err.message || "Something went wrong";
            showMessage(message, "border-red-500", "bg-red-500");
          });
      });

      const messageBoxCont = document.querySelector("#messageBox");
      const messageBox = document.querySelector("#messageBox p");
      const messageTimer = document.querySelector("#messageTimer");
      function showMessage(message, border, timerColor) {
        messageBox.textContent = message;
        messageBoxCont.classList.add(border, "-translate-x-45", "opacity-100");
        messageTimer.classList.add(timerColor, "w-full");
        setTimeout(() => {
          messageBoxCont.classList.remove(border, "-translate-x-45", "opacity-100");
          messageTimer.classList.remove(timerColor, "w-full");
        }, 5000);
      }
    </script>
